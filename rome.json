{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./styled-system/**/"]
	},
	"formatter": {
		"indentSize": 2,
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"lineWidth": 120,
		"ignore": ["./styled-system/**/"]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all",
			"quoteStyle": "single",
			"quoteProperties": "preserve"
		}
	}
}
